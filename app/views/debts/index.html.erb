<h1>Listing debts</h1>

<table>
  <thead>
    <tr>
      <th>Payment</th>
      <th>User</th>
      <th>Amount</th>
      <th>Paid</th>
      <th>Paid date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <td><%= debt.payment %></td>
        <td><%= debt.user %></td>
        <td><%= debt.amount %></td>
        <td><%= debt.paid %></td>
        <td><%= debt.paid_date %></td>
        <td><%= link_to 'Show', debt %></td>
        <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
        <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Debt', new_debt_path %>
